{
  "build": {
    "beforeBuildCommand": "cd xdvdfs-web && trunk build --features tauri",
    "beforeDevCommand": "cd xdvdfs-web && trunk serve --features tauri",
    "devPath": "http://127.0.0.1:8080",
    "distDir": "../xdvdfs-web/dist/",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "xdvdfs",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": {
          "open": true,
          "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xiso.antangelo.com",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "xdvdfs",
        "width": 800
      }
    ]
  }
}
